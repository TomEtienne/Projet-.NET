<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> My App</title>

    <style type="text/css">
        ul li a{
            color: white;
            font-weight: bold;
        }

        ul li a:hover{
            color: white;
            text-decoration: none;
        }
    </style>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>

    <div class="navbar navbar-expand-lg navbar-dark bg-danger static-top">
        <div class="container">
            <!--
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("My Application", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>-->
            <div class="navbar-collapse collapse">
                <ul class="nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-link">@Html.ActionLink("Profil", "Index", "DisplayProfil")</li>
                        <li class="nav-link">@Html.ActionLink("Utilisateurs", "Index", "DisplayUsers")</li>
                        <li class="nav-link">@Html.ActionLink("Deconnexion", "Disconnect", "Login")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Créer un compte", "Form", "Register")</li>
                        <li>@Html.ActionLink("Connexion", "Form", "Login")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
