@model MyApp.Models.DisplayInfosModel

<div class="widthContainer">
    <br />
    <h4>Détails du Profil</h4>
    <hr />

    @if (Model.UserPhoto != null)
    {
        <div class="form-group row">
            @{var image = Convert.ToBase64String(Model.UserPhoto);}
            <img class="img_style" src="data:image/gif;base64,@image" />
        </div>
    }
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-1 col-form-label title">@Html.DisplayNameFor(model => model.lastName)</label>
        <div class="col-sm-10">
            <label class="col-sm-0 col-form-label text">@Html.DisplayFor(model => model.lastName)</label>
        </div>
    </div>
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-1 col-form-label title">@Html.DisplayNameFor(model => model.firstName)</label>
        <div class="col-sm-10">
            <label class="col-sm-0 col-form-label text">@Html.DisplayFor(model => model.firstName)</label>
        </div>
    </div>
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-1 col-form-label title">@Html.DisplayNameFor(model => model.email)</label>
        <div class="col-sm-10">
            <label class="col-sm-0 col-form-label text">@Html.DisplayFor(model => model.email)</label>
        </div>
    </div>
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-1 col-form-label title">@Html.DisplayNameFor(model => model.nickName)</label>
        <div class="col-sm-10">
            <label class="col-sm-0 col-form-label text">@Html.DisplayFor(model => model.nickName)</label>
        </div>
    </div>
    <div>
        <button class="btn dark_button">@Html.ActionLink("Editer son profil", "Edit", "Profil")</button>
    </div>
    <br />
    <div class="small_message">
        Cliquer sur le bouton pour modifier le profil et ajouter une image
    </div>

</div>



